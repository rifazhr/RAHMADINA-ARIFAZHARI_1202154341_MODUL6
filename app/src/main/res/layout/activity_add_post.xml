<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.asus.rahmadinaarifazhari_1202154341_modul6.Model.AddPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"
            />
        <Button
            android:id="@+id/btn_choose_image"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_post"
            android:text="choose image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_title_post"
            android:layout_below="@id/btn_choose_image"
            android:layout_width="match_parent"
            android:hint="Title"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ed_post"
            android:hint="Write your post"
            android:layout_below="@id/et_title_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_add"
            android:layout_below="@id/ed_post"
            android:text="add post"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:onClick="add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>
